{
  "name": "tests",
  "version": "1.0.0",
  "description": "tests",
  "scripts": {
    "install-drivers": "playwright install",
    "lint:check": "eslint . --ext .js,.ts,.json --quiet",
    "lint:fix": "eslint . --ext .js,.ts,.json --fix",
    "packages:check-updates": "npm-check-updates",
